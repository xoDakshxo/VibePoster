generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trend {
  id          String   @id @default(cuid())
  name        String
  keywords    String
  description String?
  status      String   @default("new") // new | scraped | styled | active
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  styleCard    StyleCard?
  scrapedPosts ScrapedPost[]
  posts        Post[]
}

model StyleCard {
  id      String @id @default(cuid())
  trendId String @unique
  trend   Trend  @relation(fields: [trendId], references: [id], onDelete: Cascade)

  tone     String
  format   String
  minWords Int     @default(40)
  maxWords Int     @default(80)
  hooks    String // JSON array
  avoid    String // JSON array
  examples String // JSON array
  locked   Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ScrapedPost {
  id      String @id @default(cuid())
  trendId String
  trend   Trend  @relation(fields: [trendId], references: [id], onDelete: Cascade)

  uri          String
  authorDid    String
  authorHandle String
  content      String
  likes        Int      @default(0)
  reposts      Int      @default(0)
  replies      Int      @default(0)
  engagement   Int      @default(0)
  postedAt     DateTime
  scrapedAt    DateTime @default(now())

  @@index([trendId, engagement])
}

model Post {
  id      String @id @default(cuid())
  trendId String
  trend   Trend  @relation(fields: [trendId], references: [id], onDelete: Cascade)

  content     String
  status      String    @default("draft") // draft | approved | published | rejected
  tweetId     String?
  tweetUrl    String?
  createdAt   DateTime  @default(now())
  publishedAt DateTime?
}
